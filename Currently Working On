local Tab = Window:NewTab("Extra")
local Section = Tab:NewSection("Extra Items")

Section:NewToggle("Disable Crawl", "No mistakes while hacking", function()
if game:GetService("Workspace").LocalPlayer.CrawlScript.Disabled == true then
    else
    game:GetService("Workspace").LocalPlayer.CrawlScript.Disabled = false
    end
end)

Section:NewButton("Disable Crawl", "Disables Crawling", function()
    
end)

Section:NewButton("Crawl as beast", "enables crawling for beast", function()
    if game:GetService("Workspace").LocalPlayer.CrawlScript.Disabled == true then
    game:GetService("Workspace").LocalPlayer.CrawlScript.Disabled = false
    else
    print('o')
        end
end)

Section:NewButton("Fullbright", "Disables Crawling", function()
    game:GetService("Lighting").GlobalShadows = false
end)

Section:NewSlider("Time", "Change Time", 24, 0, function(p) -- 500 (MaxValue) | 0 (MinValue)
    game:GetService("Lighting").ClockTime = p
end)

Section:NewSlider("Brightness", "Change Brightness", 500, 0, function(y) -- 500 (MaxValue) | 0 (MinValue)
   game:GetService("Lighting").Brightness = y
end)

Section:NewSlider("FOV", "Change FOV", 500, 0, function(c) -- 500 (MaxValue) | 0 (MinValue)
   game:GetService("Workspace").Camera.FieldOfView = c
end)

Section:NewSlider("Change Level (CS) (NW)", "Change level", 1000, 0, function(f) -- 500 (MaxValue) | 0 (MinValue)
