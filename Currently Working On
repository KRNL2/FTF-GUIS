local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/xHeptc/Kavo-UI-Library/main/source.lua"))()

local Window = Library.CreateLib("Flee the Facility | By Mr_Bullfrog (Blizzard#8337)", "Serpent")

local Tab = Window:NewTab("Home")
local Section = Tab:NewSection("Last Updated 10/30/22")
Section:NewLabel("LabelText")
Section:NewKeybind("Press Z to hide/show GUI", "Change UI Keybind", Enum.KeyCode.Z, function()
	Library:ToggleUI()
end)

local Tab = Window:NewTab("ESP")
local Section = Tab:NewSection("Visuals")




local Tab = Window:NewTab("Player")
local Section = Tab:NewSection("Local Player")

